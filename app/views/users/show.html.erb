<% title "#{@user.email}" %>
<p>
  <strong><%= t('loo.users.player_name') %> </strong>: <%= "#{@user.player_name} (#{@user.matricule})"%>
</p>

<div id="sight">
  <table id="s4" cellpadding="0" cellspacing="0" style="border-color:#ff9933;">
    <%= @user.sight %>
  </table>
</div>


<% if show_admin_or_current_user? %>
  <%= link_to t('users.edit'), edit_user_path(@user) %>
  <%= link_to t('loo.users.edit_sight'), edit_sight_user_path(@user) %>
<% end %>