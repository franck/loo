<% title "Users" %>

<table>
  <tr>
    <th><%= t('users.email') %></th>
    <th><%= t('users.roles') %></th>
  </tr>
  <% for user in @users %>
  <tr>
    <td><%= link_to user.email, user_path(user) %></td>
    <td><%= user.roles %></td>
  </tr>
  <% end %>
</table>

<% show_to :admin do %>
  <%= link_to t('users.add_user'), new_user_path %>
<% end %>

