<% title "Joueur : #{@player.name} (#{@player.matricule})" %>

<h1><%= "#{@player.name} (#{@player.matricule})" %></h1>

<ul>
  <li>Dernière mise à jour : <%= l(@player.updated_at, :format => :default)%></li>
  <li>Position : <%= "#{@player.pos_x ? @player.pos_x : "?" } / #{@player.pos_y ? @player.pos_y : "?"}" %></li>
  <li>Race : <%= @player.race %></li>
</ul>

<% if @player.user %>
<%= display_map(Landscape.first, @player.user, @player.user.perception) %>
<% end %>

<h2>Notes</h2>

<% if @notes.size > 0 %>

<%= will_paginate @notes %>

<ul class="notes">
  <% for note in @notes %>
    <%= display_note(note) %>
  <% end %>  
</ul>

<% else %>
<p>Aucune note</p>
<% end %>